{
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "ES2015",
    "outDir": "lib",
    "declaration": false,
    "moduleResolution": "Node",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "useDefineForClassFields": true,
    "types": ["chrome-types"]
  },
}